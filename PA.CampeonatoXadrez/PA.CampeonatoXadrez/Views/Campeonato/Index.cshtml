@model IEnumerable<PA.CampeonatoXadrez.ViewModel.CampeonatoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar Campeonato", "Criar","Campeonato", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fim)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fim)
        </td>
        <td>
            @Html.ActionLink("Partida", "Index", "Partida", new { id = item.Id }, new { @class = "btn btn-primary" }) 
        </td>
    </tr>
}

</table>
